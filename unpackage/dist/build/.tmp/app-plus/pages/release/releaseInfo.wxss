page {
  background-color: #F6F6F6;
}
.updateMain {
  height: 90rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F6F6F6;
}
.updateMain .um-main {
    width: 90%;
    height: 90rpx;
    margin: 0 auto;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.updateMain .um-main .ua-left {
      height: 60rpx;
      line-height: 60rpx;
      font-size: 26rpx;
}
.updateMain .um-main .ua-right {
      width: 60%;
      height: 60rpx;
      line-height: 60rpx;
      text-align: right;
}
.updateMain .um-main .ua-right picker {
        width: 100%;
        height: 100%;
}
.updateMain .um-main .ua-right picker .uni-input {
          font-size: 24rpx;
}
.updateMain .um-main .ua-right input {
        width: 100%;
        height: 100%;
        font-size: 24rpx;
        text-align: right;
}
.talkWays {
  background-color: #F6F6F6;
}
.areaMain {
  background-color: #FFFFFF;
  border-top: 1rpx solid #F6F6F6;
  padding-bottom: 20rpx;
}
.areaMain .am-main {
    width: 90%;
    margin: 0 auto;
}
.areaMain .am-main .am-area {
      width: 100%;
}
.areaMain .am-main .am-area textarea {
        width: 100%;
        height: 200rpx;
        font-size: 24rpx;
        padding-top: 10rpx;
}
.areaMain .am-main .am-icon {
      height: 120rpx;
      margin-bottom: 20rpx;
      margin: 10rpx 0 20rpx 0;
}
.areaMain .am-main .am-icon image {
        width: 120rpx;
        height: 120rpx;
}
.areaMain .am-main .am-imgs {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
}
.areaMain .am-main .am-imgs .ai-item {
        width: 20%;
        text-align: center;
        height: 120rpx;
        margin-bottom: 20rpx;
}
.areaMain .am-main .am-imgs .ai-item image {
          width: 120rpx;
          height: 120rpx;
          margin: 0 20rpx;
}
.btnMain {
  width: 530rpx;
  height: 90rpx;
  background-color: #387BDC;
  margin: 60rpx auto 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.btnMain button {
    width: 100%;
    height: 100%;
    line-height: 90rpx;
    color: #FFFFFF;
    font-size: 26rpx;
}

