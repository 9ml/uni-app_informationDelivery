.topNav {
  width: 100%;
  height: 130rpx;
  position: fixed;
  top: 0;
  z-index: 999;
  background-color: #FFFFFF;
}
.topNav .topNavSpace {
    height: 40rpx;
}
.topNav .topNavMain {
    width: 94%;
    height: 90rpx;
    margin: 0 auto;
